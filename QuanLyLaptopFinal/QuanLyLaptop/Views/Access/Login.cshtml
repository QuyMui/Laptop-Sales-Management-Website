
@{
    Layout = null;
}
@model QuanLyLaptop.Models.UsSer
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../Template/LayoutAdmin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../Template/LayoutAdmin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../../Template/LayoutAdmin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../Template/LayoutAdmin/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="../../Template/LayoutAdmin/assets/images/logo.svg">
                            </div>
                            <h4>ĐĂNG NHẬP HỆ THỐNG QUẢN TRỊ</h4>
                            <h6 class="font-weight-light">Vui lòng nhập User Name và pasword.</h6>
                            @*<form class="pt-3">*@
                            @using (Html.BeginForm("Login", "Access", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.username, new { @class = "form-control form-control-lg", placeholder = "Username", required = "required", autofocus = "autofocus" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.password, new { @class = "form-control form-control-lg", type = "password", placeholder = "Password" })
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN IN</button>
                                </div>
                            }

                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" class="form-check-input"> Keep me signed in
                                    </label>
                                @*</div>
                                <a href="#" class="auth-link text-black">Forgot password?</a>
                            </div>*@
                            @*<div class="mb-2">
                                <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                                    <i class="mdi mdi-facebook me-2"></i>Connect using facebook
                                </button>
                            </div>*@
                            <div class="text-center mt-4 font-weight-light">
                                Don't have an account? <a href="@Url.Action("DangKy", "Access")" class="text-primary">Create</a>
                            </div>
                            @*</form>*@
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../Template/LayoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../Template/LayoutAdmin/assets/js/off-canvas.js"></script>
    <script src="../../Template/LayoutAdmin/assets/js/hoverable-collapse.js"></script>
    <script src="../../Template/LayoutAdmin/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>

